<Window x:Class="MotoGP.News"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MotoGP"
        mc:Ignorable="d"
        Title="News" Height="600" Width="800">
    <Window.Resources>
        <Style x:Key="Title" TargetType="ListViewItem">
            <Setter Property="FontSize"  Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
        <Style x:Key="Description" TargetType="ListViewItem">
            <Setter Property="FontSize"  Value="12"/>
        </Style>
    </Window.Resources>
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="Latest news" VerticalAlignment="Top" Height="60" Width="774" FontSize="36" FontWeight="Bold" TextAlignment="Center"/>
        <ListView x:Name="NewsList" HorizontalAlignment="Left" Height="485" Margin="10,75,0,0" VerticalAlignment="Top" Width="774">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>

    </Grid>
</Window>
